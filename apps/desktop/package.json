{
  "name": "desktop",
  "version": "1.0.0",
  "description": "",
  "main": "main/index.js",
  "scripts": {
    "dev-electron": "concurrently  \"next dev renderer\" \"pnpm run build-electron\"  \"electron .\" ",
    "dev": "next dev renderer",
    "clean": "rimraf dist renderer/out renderer/.next",
    "build-renderer": "next build renderer",
    "build-electron": "rimraf main & tsc -p electron-src",
    "build": "pnpm run build-renderer && pnpm run build-electron",
    "pack-app": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/cache": "latest",
    "@emotion/server": "latest",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/inter": "^5.0.8",
    "@mui/icons-material": "^5.14.3",
    "@mui/joy": "5.0.0-beta.2",
    "@mui/material": "^5.14.5",
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "clsx": "^2.0.0",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.42.0",
    "eslint-config-next": "13.4.16",
    "next": "13.4.16",
    "postcss": "8.4.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.5.0",
    "concurrently": "^8.2.0",
    "electron": "^26.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    }
  }
}
